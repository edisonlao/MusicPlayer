<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    >
    <ImageView
        android:id="@+id/ivbizhi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bizhi2"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/ivbizhixia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/bizhi2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ListView
        android:id="@+id/lvmusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#FFFFFF"
        android:dividerHeight="1px"
        android:layout_weight="0.4"
        >
    </ListView>
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvmusic"
        android:layout_weight="2.5"
        android:background="#0e000000"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0e000000"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0e000000"
        android:layout_weight="2.45"
        >
        <ProgressBar
            android:id="@+id/pbProgress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar1"
            />


        <TextView
            android:id="@+id/tvCurrentPosition"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="#FFFFFF"

            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            />
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/time"
        android:orientation="horizontal"
        android:layout_weight="2.3"
        android:onClick="onClick"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2.3"
            android:onClick="onClick"
            >
        <ImageButton
            android:id="@+id/btnshangyishou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/format3"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"

            />
        <ImageButton
            android:id="@+id/btnbofang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/btnshangyishou"
            android:src="@drawable/bofang3"
            android:onClick="onClick"
            />
        <ImageButton
            android:id="@+id/btnxiayishou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/btnbofang"
            android:src="@drawable/next3"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"
            />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</FrameLayout>
